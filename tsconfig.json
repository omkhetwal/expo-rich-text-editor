{
    "compilerOptions": {
        "declaration": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react-native",
        "lib": [
            "ESNext", "DOM"
        ],
        "allowJs": false,
        "moduleResolution": "node",
        "module": "ESNext",
        "noEmitOnError": true,
        "baseUrl": ".",
        "rootDir": "src",
        "outDir": "dist",
        "sourceMap": true,
        "strict": true,
        "target": "ESNext",
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "**/__tests__/*",
        "node_modules",
    ],
    "include": [
        "src"
    ],
}